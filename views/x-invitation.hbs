  body {
  color: #333333;
  font-family: arial;
  max-width: 650px;
  margin: 0 auto;
  padding: 0 16px;
  min-height: 100vh;
  line-height: 1.6;
}

.content-wrap {
  background-color: #fff;
  margin: 20px auto;
  max-width: 600px;
  border-radius: 5px;
  border: #ccc solid 1px
}

.content {
  padding: 20px;
  font-size: 18px;

}

.content-detail {
  margin-bottom: 10px;
}

.link {
  color: #007bff;
  text-decoration: none;
}

.ul {
  list-style-type: none;
  margin-left: 20px;
  padding-left: 0;
}

.li {
  margin-bottom: 5px;
}



.title {
  background-color: #008000;
